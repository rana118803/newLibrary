﻿@model IEnumerable<LibraryManagementSystem.Models.tblcategory>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Categories Listing
            </div>
            <div class="panel-body">


                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th>Creation Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">

                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>

                                @if (item.Status == 1)
                                {

                                    <td class="center">
                                        @using (Html.BeginForm("Edit", "tblcategory", new { id = item.id }, FormMethod.Post))
                                        {@Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success" value="0">Active</button>}


                                    </td>
                                }
                                else //if (item.Status == 1)
                                {
                                    <td class="center">
                                        @using (Html.BeginForm("Edit", "tblcategory", new { id = item.id }, FormMethod.Post))
                                        {@Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger" value="1">Inactive</button>}
                                    </td>
                                }


                                <td class="center">@Html.DisplayFor(modelItem => item.CreationDate)</td>


                                <td>

                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })


                                </td>
                            </tr>

                        }
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>