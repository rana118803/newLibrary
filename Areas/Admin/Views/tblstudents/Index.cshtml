@model IEnumerable<LibraryManagementSystem.Models.tblstudents>

@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row pad-botm">
            <div class="col-md-12">
                <h4 class="header-line">Manage Reg Students</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Reg Students
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Student ID</th>
                                        <th>Student Name</th>
                                        <th>Email id </th>
                                        <th>Mobile Number</th>
                                        <th>Reg Date</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @foreach (var item in Model)
                                    {
                                    <tr class="odd gradeX">
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.id)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.StudentId)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.FullName)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.EmailId)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.MobileNumber)
                                        </td>
                                        <td class="center">
                                            @Html.DisplayFor(modelItem => item.RegDate)
                                        </td>

                                        @if (item.Status == 1)
                                        {
                                            <td class="center">
                                                Active
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="center">
                                                Blocked
                                            </td>
                                        }

                                        @if (item.Status == 1)
                                        {

                                    <td class="center">

                                        @using (Html.BeginForm("Edit", "tblstudents", new { id = item.id }, FormMethod.Post))
                                        {@Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger" value="0">Inactive</button>

                                    }

                                    </td>
                                        }
                                        else if(item.Status ==0)
                                        {
                                    <td class="center">
                                        @using (Html.BeginForm("Edit", "tblstudents", new { id = item.id }, FormMethod.Post))
                                        {@Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success" value="1">Active</button>

                                        }
                                    </td>
                                        }



                                    </tr>


                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>



    </div>
</div>
