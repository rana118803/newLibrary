<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Url.Content("~/Style/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("Style/css/font-awesome.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Style/css/style.css")" rel="stylesheet" type="text/css" />
    <div class="navbar navbar-inverse set-radius-zero">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">
                    <img src="~/Style/img/logo.png" />
                </a>

            </div>
            <div class="right-div">
                @Html.ActionLink("LOG ME OUT", "logOut", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-danger pull-right" })
            </div>

        </div>
    </div>
    <!-- LOGO HEADER END-->
    <section class="menu-section">
        <div class="container">
            <div class="row ">
                <div class="col-md-12">
                    <div class="navbar-collapse collapse ">
                        <ul id="menu-top" class="nav navbar-nav navbar-right">

                            <li>@Html.ActionLink("DASHBOARD", "Index", "Home")</li>
                            <li>
                                <a href="#" class="dropdown-toggle" id="ddlmenuItem" data-toggle="dropdown"> ACCOUNT <i class="fa fa-angle-down"></i></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="ddlmenuItem">
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="add-author.php">MY PROFILE</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="manage-authors.php">CHANGE PASSWORD</a></li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("CATEGORIES", "UserLogin", "Home")</li>
                            <li>
                                <a href="#" class="dropdown-toggle" id="ddlmenuItem" data-toggle="dropdown"> Issue Books <i class="fa fa-angle-down"></i></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="ddlmenuItem">
                                    <li role="presentation">@Html.ActionLink("New Issue Book", "Index", "issuedbookdetails")</li>
                                    <li role="presentation">@Html.ActionLink("MANAGE Issue Books", "Index", "issuedbookdetails")</li>
                                    </ul>
                            </li>
                            <li>@Html.ActionLink("VIEW BOOKS", "UserLogin", "Home")</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
</head>
<body>

    <div class="container body-content">
        @RenderBody()
        <hr />


    </div>
    <section class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    &copy;Online Library Management System |<a href="https://itsourcecode.com/" target="_blank"> Designed by : ITSOURCECODE</a>
                </div>

            </div>
        </div>
    </section>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
